<% if params[:drawn] %>
  <%= turbo_stream.remove nested_dom_id("space", @space) %>
<% end %>

<%= turbo_stream.remove @space %>
<%= render_turbo_stream_flash_messages %>

<%= turbo_stream.update dom_id(@property, :total) do %>
  <%= render "properties/total", property: @property %>
<% end %>