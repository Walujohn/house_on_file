<%= turbo_frame_tag feature do %>
    <div class="feature">
      <div class="feature__name">
        <%= feature.name %>
        <div class="feature__description">
          <%= simple_format feature.description %>
        </div>
      </div>
      <div class="feature__variety-brand">
        <%= feature.quantity %>
        &times;
        <%= number_to_currency feature.unit_price %>
      </div>
        
      <div class="feature__variety">
        <%= feature.variety %>
      </div>
        
      <div class="feature__variety">
        <%= feature.quantity %>
      </div>
      <div class="feature__brand">
        <%= number_to_currency feature.unit_price %>
      </div>
      <div class="feature__actions">
        <%= button_to "Delete",
                      [property, space, feature],
                      method: :delete,
                      class: "btn btn--light" %>
        <%= link_to "Edit",
                    [:edit, property, space, feature, tab: "switch"],
                     class: "btn btn--light" %>
      </div>
    </div>
<% end %>
