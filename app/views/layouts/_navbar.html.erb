<header class="navbar">
  <% if user_signed_in? %>
    <div class="navbar__brand">
      <%= current_group.name %>
      <%# image_tag(current_user.avatar_url) %>
    </div>
    <div class="navbar__name">
      <%= current_user.name %>
    </div>
    
    <%= link_to "Edit Account", 
                edit_user_registration_path,
                class: "btn btn--dark navbar__edit" %>
    
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  data: { turbo: false },
                  method: :delete,
                  class: "btn btn--dark" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn--dark navbar__right" %>
  <% end %>
</header>
